{
	"name": "authnodets",
	"version": "1.0.0",
	"description": "Prueba tecnica para Konfio ",
	"main": "dist/app.js",
	"scripts": {
		"secret": "node ./scripts/jwt_secret.cjs",
		"build": "tsc",
		"dev": "node --watch --no-warnings --loader ts-node/esm ./src/app.ts",
		"test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --detectOpenHandles",
		"db": "npx sequelize-cli db:seed  --config=config/config.cjs && npx sequelize-cli db:migrate --config=config/config.cjs",
		"db:seed": "npx sequelize-cli db:seed:all  --config=config/config.cjs",
		"db:seed:undo": "npx sequelize-cli db:seed:undo:all --config=config/config.cjs",
		"db:migrate": "npx sequelize-cli db:migrate --config=config/config.cjs",
		"db:migrate:undo": "npx sequelize-cli db:migrate:undo:all --config=config/config.cjs"
	},
	"type": "module",
	"author": "Angel Ortiz Olivera",
	"license": "MIT",
	"devDependencies": {
		"@jest/types": "^29.6.3",
		"@types/jest": "^29.5.14",
		"@types/node": "^22.12.0",
		"@types/nodemailer": "^6.4.17",
		"@types/supertest": "^6.0.2",
		"jest": "^29.7.0",
		"nodemon": "^3.1.9",
		"sequelize-cli": "^6.6.2",
		"supertest": "^7.0.0",
		"ts-jest": "^29.2.5",
		"ts-node": "^10.9.2",
		"typescript": "^5.7.3"
	},
	"dependencies": {
		"@fastify/cors": "^10.0.2",
		"@fastify/helmet": "^13.0.1",
		"@fastify/jwt": "^9.0.3",
		"@fastify/postgres": "^6.0.2",
		"@fastify/rate-limit": "^10.2.2",
		"@mgcrea/fastify-request-logger": "^1.9.0",
		"@mgcrea/pino-pretty-compact": "^1.4.2",
		"@types/bcrypt": "^5.0.2",
		"ajv-errors": "^3.0.0",
		"bcrypt": "^5.1.1",
		"crypto": "^1.0.1",
		"dotenv": "^16.4.7",
		"fastify": "^5.2.1",
		"nodemailer": "^6.10.0",
		"pg": "^8.13.1",
		"sequelize": "^6.37.5"
	}
}
