{
	"compilerOptions": {
		"target": "es2022",

		"module": "es2022",
		// "rootDir": "./", 
		"moduleResolution": "node",
		"baseUrl": "./",
		"rootDir": "./src",
		"outDir": "./dist",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,

		"strict": true,
		"noStrictGenericChecks": false,
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "**/__test__"]
}
